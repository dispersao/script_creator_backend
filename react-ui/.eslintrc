{
 "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
   "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "space-unary-ops": [
        "error", {
          "words": true,
          "nonwords": false
        }
      ],
      "block-spacing": "error",
      "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
      "comma-spacing": ["error", { "before": false, "after": true }],
      "indent": ["error", 2, {
        "SwitchCase": 1
      } ],
      "semi": ["error", "never"]
    }
}
